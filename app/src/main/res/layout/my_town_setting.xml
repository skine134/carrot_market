<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!--    <string name="my_town_setting_title">내 동네 설정</string>-->
<!--    <string name="my_town_setting_select">동네 선택</string>-->
<!--    <string name="my_town_setting_my_town_notice">지역은 최소 1개 이상 최대 2개까지 설정 가능해요.</string>-->
<!--    <string name="my_town_setting_near_by_town">town과 근처 <u>동네 number개</u></string>-->
<!--    <string name="my_town_setting_town_range_notice">선택한 범위의 게시글만 볼 수 있어요.</string>-->
<!--    <string name="my_town_setting_town_range_minimum">내동네</string>-->
<!--    <string name="my_town_setting_town_range_maxmum">근처동네</string>-->
    <com.skott.softsquared.outsourcing_simulation.src.util.custom_views.CarrotMarketAppbar
        android:id="@+id/main_app_bar"
        style="@style/AppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:back_button="true"
        app:title="@string/my_town_setting_title"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_app_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <TextView
            android:id="@+id/select_town_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/my_town_setting_my_town_notice"
            android:text="@string/my_town_setting_select"
            android:textStyle="bold"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/my_town_setting_my_town_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            app:layout_constraintTop_toBottomOf="@id/select_town_text_view"
            app:layout_constraintBottom_toTopOf="@id/my_town_buttons_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/my_town_setting_my_town_notice"
            />
        <LinearLayout
            android:id="@+id/my_town_buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/my_town_setting_my_town_notice"
            app:layout_constraintBottom_toTopOf="@id/my_town_setting_limit_line"
            >

            <View
                android:id="@+id/my_town_first_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                />
            <View
                android:id="@+id/my_town_second_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                />
        </LinearLayout>
        <View
            android:id="@+id/my_town_setting_limit_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginVertical="30dp"
            app:layout_constraintTop_toBottomOf="@id/my_town_buttons_layout"
            app:layout_constraintBottom_toTopOf="@id/my_town_setting_near_by_town_text_view"
            />
        <TextView
            android:id="@+id/my_town_setting_near_by_town_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_town_setting_limit_line"
            app:layout_constraintBottom_toTopOf="@id/my_town_setting_town_range_notice_text_view"
            android:text="@string/my_town_setting_near_by_town"
            android:textStyle="bold"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/my_town_setting_town_range_notice_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_town_setting_near_by_town_text_view"
            app:layout_constraintBottom_toTopOf="@id/my_town_set_range_progress_bar"
            android:text="@string/my_town_setting_town_range_notice"
            />
        <!-- step seek bar custom 필요.-->
        <SeekBar
            android:id="@+id/my_town_set_range_progress_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_town_setting_town_range_notice_text_view"
            app:layout_constraintBottom_toTopOf="@id/my_town_setting_town_range_minimum_text_view"
            />
        <TextView
            android:id="@+id/my_town_setting_town_range_minimum_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/my_town_setting_town_range_maxmum_text_view"
            app:layout_constraintTop_toBottomOf="@id/my_town_set_range_progress_bar"
            app:layout_constraintBottom_toTopOf="@id/my_town_visual_image_view"
            android:text="@string/my_town_setting_town_range_minimum"
            />
        <TextView
            android:id="@+id/my_town_setting_town_range_maxmum_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintStart_toEndOf="@id/my_town_setting_town_range_minimum_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_town_set_range_progress_bar"
            app:layout_constraintBottom_toTopOf="@id/my_town_visual_image_view"
            android:text="@string/my_town_setting_town_range_maxmum"
            />
        <ImageView
            android:id="@+id/my_town_visual_image_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1.5:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_town_setting_town_range_minimum_text_view"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>