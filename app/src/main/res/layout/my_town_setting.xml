<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.skott.softsquared.outsourcing_simulation.src.util.custom_views.CarrotMarketAppbar
        android:id="@+id/main_app_bar"
        style="@style/AppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:back_button="true"
        app:title="@string/my_town_setting_title"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_app_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <TextView
            android:id="@+id/select_town_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/my_town_setting_my_town_notice"
            android:text="@string/my_town_setting_select"
            android:textStyle="bold"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/my_town_setting_my_town_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            app:layout_constraintTop_toBottomOf="@id/select_town_text_view"
            app:layout_constraintBottom_toTopOf="@id/my_town_buttons_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/my_town_setting_my_town_notice"
            />
        <LinearLayout
            android:id="@+id/my_town_buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/my_town_setting_my_town_notice"
            app:layout_constraintBottom_toTopOf="@id/my_town_setting_limit_line"
            >

            <com.skott.softsquared.outsourcing_simulation.src.util.custom_views.MyTownButtonView
                android:id="@+id/my_town_first_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:is_active="false"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                />
            <com.skott.softsquared.outsourcing_simulation.src.util.custom_views.MyTownButtonView
                android:id="@+id/my_town_second_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                />
        </LinearLayout>
        <View
            android:id="@+id/my_town_setting_limit_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/carrot_market_guide_line"
            android:layout_marginVertical="30dp"
            app:layout_constraintTop_toBottomOf="@id/my_town_buttons_layout"
            app:layout_constraintBottom_toTopOf="@id/my_town_range_fragment"
            />
        <fragment
            android:id="@+id/my_town_range_fragment"
            tools:layout="@layout/seek_map_fragment"
            class="com.skott.softsquared.outsourcing_simulation.src.main.my_town_setting.SeekMapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_town_setting_limit_line"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>