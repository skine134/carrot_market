<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.main.signup.SignupActivity">

    <!--TODO 시간나면 app_Bar는 커스텀 뷰로-->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/sign_up_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sign_up_content_view"
        >
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/pure_trans"
            app:elevation="0dp"
            >
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:padding="10dp"
                android:orientation="horizontal"
                >
                <ImageButton
                    android:id="@+id/back_button"
                    style="@style/BackButton"/>
                <TextView
                    android:text="@string/sign_up_app_bar_title"
                    style="@style/Title"
                    />
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sign_up_content_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/sign_up_app_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <ImageView
            android:id="@+id/sign_up_image_view"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/carrot_market_sign_up_character"
            />
        <TextView
            android:id="@+id/sign_up_notice_text_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="60dp"
            app:layout_constraintStart_toEndOf="@id/sign_up_image_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/sign_up_image_view"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/sign_up_notice_message"
            android:textSize="15sp"
            />

        <EditText
            android:id="@+id/sign_up_cellphone_edit_text"
            style="@style/SignInEditText"
            android:hint="@string/sign_up_phone_number_input_hint"
            android:inputType="number"
            android:padding="10dp"
            android:paddingStart="15dp"
            android:maxLength="13"
            app:layout_constraintTop_toBottomOf="@+id/sign_up_notice_text_view"
            app:layout_constraintBottom_toTopOf="@id/sign_up_take_auth_number_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <android.widget.Button
            android:id="@+id/sign_up_take_auth_number_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:background="@drawable/take_auth_number_selector"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:enabled="false"
            app:layout_constraintTop_toBottomOf="@id/sign_up_cellphone_edit_text"
            app:layout_constraintBottom_toTopOf="@id/sign_up_is_change_phone_number_text_view"
            android:text="@string/sign_up_take_auth_number_button"
            android:textSize="18sp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/sign_up_is_change_phone_number_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintEnd_toStartOf="@id/sign_up_find_id_for_email_text_view"
            app:layout_constraintTop_toBottomOf="@id/sign_up_take_auth_number_button"

            android:text="@string/sign_up_is_change_phone_number"
            />
        <TextView
            android:id="@+id/sign_up_find_id_for_email_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:text="@string/sign_up_find_id_for_email"
            app:layout_constraintStart_toEndOf="@id/sign_up_is_change_phone_number_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sign_up_take_auth_number_button"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>