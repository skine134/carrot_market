<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.skott.softsquared.outsourcing_simulation.src.util.custom_views.CarrotMarketAppbar
        android:id="@+id/app_setting_main_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="설정"
        app:back_button="true"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/app_setting_main_app_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scrollbars="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/alter_setting"
                android:text="알람 설정"
                android:padding="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
          <TextView
              android:id="@+id/alert_and_sound"
              android:text="@string/app_setting_alert_And_sound"
              android:layout_marginStart="8dp"
              style="@style/AppSetting"
              />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/dont_touch_time_setting"
                    android:padding="12dp"
                    android:text="@string/app_setting_dont_touch_time_setting"
                    android:textSize="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="8.5"
                    android:layout_height="wrap_content"
                    />
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/dont_touch_time_setting_swtich"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end|center"
                    android:layout_weight="1.5"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/vibration_setting"
                    android:padding="12dp"
                    android:text="@string/app_setting_vibration"
                    android:textSize="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8.5"
                    />
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/vibration_switch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end|center"
                    android:layout_weight="1.5"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:background="@color/carrot_market_guide_line"
                />
            <TextView
                android:id="@+id/user_setting"
                android:text="사용자 설정"
                android:layout_marginStart="8dp"
                android:padding="10dp"
                android:layout_marginBottom="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginStart="8dp"
                android:id="@+id/user_setting_recycler_view"
                android:paddingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/carrot_market_guide_line"
                />
            <TextView
                android:id="@+id/other_setting"
                android:text="기타"
                android:layout_marginStart="8dp"
                android:padding="10dp"
                android:layout_marginBottom="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/other_setting_recycler_view"
                android:paddingHorizontal="10dp"
                android:layout_marginStart="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/carrot_market_guide_line"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>