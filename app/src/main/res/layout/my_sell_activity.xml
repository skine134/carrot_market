<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.skott.softsquared.outsourcing_simulation.src.util.custom_views.CarrotMarketAppbar
        android:id="@+id/sell_list_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/sell_activity_app_bar_title"
        app:back_button="true"
        app:layout_constraintTop_toTopOf="parent"
        app:is_bottom_line="false"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/carrot_market_guide_line"
            app:layout_constraintTop_toBottomOf="@id/sell_list_tab_layout"
            />
    </com.skott.softsquared.outsourcing_simulation.src.util.custom_views.CarrotMarketAppbar>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/sell_list_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/carrot_market_tab_host_theme"
        app:tabTextAppearance="@style/carrot_market_tab_host_style"
        app:layout_constraintTop_toBottomOf="@id/sell_list_app_bar"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/sell_list_tab_layout"
        android:background="@color/carrot_market_guide_line"
        />
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/sell_list_view_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sell_list_tab_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>