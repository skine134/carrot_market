<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp"
    >
    <include
        android:id="@+id/favorite_list_adapter"
        layout="@layout/product_item_adapter"
    />
    <CheckBox
        android:id="@+id/favorite_check_box"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:button="@null"
        android:layout_marginEnd="20dp"
        android:background="@drawable/favorite_button_selector"
        android:checked="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/favorite_list_adapter"
    />
</androidx.constraintlayout.widget.ConstraintLayout>