<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/sign_up_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sign_in_content_view"
        >
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/pure_trans"
            app:elevation="0dp"
            >
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:padding="10dp"
                android:orientation="horizontal"
                >
                <ImageButton
                    android:id="@+id/back_button"
                    style="@style/BackButton"/>
                <TextView
                    android:text="@string/sign_in_app_bar_title"
                    style="@style/Title"
                    />
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sign_in_content_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/sign_up_app_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <EditText
        android:id="@+id/sign_in_cellphone_edit_text"
        style="@style/SignInEditText"
        android:hint="@string/sign_up_phone_number_input_hint"
        android:inputType="phone"
        android:padding="10dp"
        android:paddingStart="15dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="@id/sign_in_content_view"
        app:layout_constraintBottom_toTopOf="@id/sign_in_take_auth_number_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

        <android.widget.Button
            android:id="@+id/sign_in_take_auth_number_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:background="@drawable/sign_up_take_auth_number_shape"
            android:layout_marginTop="7dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/sign_in_cellphone_edit_text"
            app:layout_constraintBottom_toTopOf="@id/sign_in_auth_number_edit_text"
            android:text="@string/sign_up_take_auth_number_button"
            android:textSize="18sp"
            android:textColor="@color/white"
            />
        <EditText
            android:id="@+id/sign_in_auth_number_edit_text"
            style="@style/SignInEditText"
            android:hint="@string/sign_in_auth_number_input_hint"
            android:inputType="phone"
            android:padding="10dp"
            android:paddingStart="15dp"
            app:layout_constraintTop_toBottomOf="@+id/sign_in_take_auth_number_button"
            app:layout_constraintBottom_toTopOf="@id/sign_in_accept_and_start_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/sign_in_warning_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_in_warning"

            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toBottomOf="@id/sign_in_auth_number_edit_text"
            app:layout_constraintBottom_toTopOf="@id/sign_in_accept_link_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/sign_in_accept_link_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sign_in_warning_text_view"
            app:layout_constraintBottom_toTopOf="@id/sign_in_accept_and_start_button"
            android:text="@string/sign_in_accept_link"
            />
        <android.widget.Button
            android:id="@+id/sign_in_accept_and_start_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:background="@drawable/sign_up_take_auth_number_shape"
            android:layout_marginTop="7dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/sign_in_accept_link_text_view"
            android:text="@string/sign_in_accept_and_start"
            android:textSize="18sp"
            android:textColor="@color/white"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>