<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.main.MainActivity">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/sign_in_app_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sign_in_content_view"
        >
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:gravity="center|start"
            android:orientation="horizontal"
            >

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_in_app_bar_title"
                android:textSize="25dp"
                android:textStyle="bold"
                />
        </com.google.android.material.appbar.AppBarLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sign_in_content_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/sign_in_app_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <ImageView
            android:id="@+id/sign_in_image_view"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/carrot_market_sign_in_character"
            />
        <TextView
            android:id="@+id/sign_in_notice_text_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="80dp"
            app:layout_constraintStart_toEndOf="@id/sign_in_image_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/sign_in_image_view"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/sign_in_notice_message"
            />

        <EditText
            android:id="@+id/sign_in_cellphone_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/sign_in_phone_number_input_hint"
            android:inputType="phone"
            app:layout_constraintTop_toBottomOf="@+id/sign_in_notice_text_view"
            app:layout_constraintBottom_toTopOf="@id/sign_in_take_auth_number_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <android.widget.Button
            android:id="@+id/sign_in_take_auth_number_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/sign_in_cellphone_edit_text"
            app:layout_constraintBottom_toTopOf="@id/sign_in_is_change_phone_number_text_view"
            android:text="@string/sign_in_take_auth_number_button"
            />
        <TextView
            android:id="@+id/sign_in_is_change_phone_number_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintEnd_toStartOf="@id/sign_in_find_id_for_email_text_view"
            app:layout_constraintTop_toBottomOf="@id/sign_in_take_auth_number_button"

            android:text="@string/sign_in_is_change_phone_number"
            />
        <TextView
            android:id="@+id/sign_in_find_id_for_email_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_in_find_id_for_email"
            app:layout_constraintStart_toEndOf="@id/sign_in_is_change_phone_number_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sign_in_take_auth_number_button"

            android:autoLink=""
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>