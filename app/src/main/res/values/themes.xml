<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OutSourcingSimulating" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/carrot_market_primary</item>
        <item name="colorPrimaryVariant">@color/carrot_market_primary</item>
        <item name="colorOnPrimary">@color/carrot_market_primary</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <!-- Secondary brand color. -->
        <item name="android:textColor">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textCursorDrawable">@drawable/certificate_cursor_shape</item>
        <item name="colorControlActivated">@color/certificate_edit_text_cursor</item>
        <item name="android:textColorHighlight">@color/carrot_market_highlight</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/carrot_market_default_color</item>
        <item name="colorPrimary">@color/carrot_market_default_color</item>

    </style>
    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/teal_200</item>
        <item name="android:textColorPrimary">@color/teal_200</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="BackButton">
        <item name="android:src">@drawable/back_button_30</item>
        <item name="android:background">@color/pure_trans</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CreatePostEditText">
        <item name="android:background">@null</item>
        <item name="android:gravity">center|start</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:layout_marginVertical">10dp</item>
    </style>
    <style name="SignInEditText">
        <item name="android:background">@drawable/certificate_edit_text_shape</item>
        <item name="android:gravity">center|start</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:layout_marginVertical">10dp</item>
    </style>

    <style name="AppBarIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:background">@color/pure_trans</item>
    </style>
    <style name="AppSetting">
        <item name="android:textSize">16dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="AppBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">3dp</item>
    </style>
    <style name="collapsingToolbarLayoutCollapsingTitleColor" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="collapsingToolbarLayoutExpandingTitleColor" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/pure_trans</item>
    </style>
    <style name="profile_bottom_content_text_style">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">9</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center|start</item>
    </style>
    <style name="profile_bottom_content_linear_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">17dp</item>
        <item name="android:layout_marginVertical">20dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="near_by_chip_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="chipBackgroundColor">@color/pure_trans</item>
        <item name="chipStrokeColor">@color/near_by_search_bg</item>
        <item name="chipStrokeWidth">2dp</item>
    </style>
    <style name="town_news_chip_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">@color/near_by_search_bg</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipCornerRadius">0dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="carrot_market_tab_host_theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/carrot_market_tab_layout_color</item>
        <item name= "colorAccent">@color/black</item>
    </style>
    <style name="carrot_market_tab_host_style" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="sold_comment_style">
        <item name="android:paddingVertical">10dp</item>
    </style>
</resources>