<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OutSourcingSimulating" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/carrot_market_primary</item>
        <item name="colorPrimaryVariant">@color/carrot_market_primary</item>
        <item name="colorOnPrimary">@color/carrot_market_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textCursorDrawable">@drawable/sign_up_cursor_shape</item>
        <item name="colorControlActivated">@color/sign_up_edit_text_cursor</item>
        <item name="android:textColorHighlight">@color/carrot_market_highlight</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorControlNormal">@color/teal_200</item>
        <item name="android:textColorPrimary">@color/teal_200</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="BackButton">
        <item name="android:src">@drawable/back_button_30</item>
        <item name="android:background">@color/pure_trans</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CreatePostEditText">
        <item name="android:background">@null</item>
        <item name="android:gravity">center|start</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp </item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:layout_marginVertical">10dp</item>
    </style>
    <style name="SignInEditText">
        <item name="android:background">@drawable/sign_up_edit_text_shape</item>
        <item name="android:gravity">center|start</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp </item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:layout_marginVertical">10dp</item>
    </style>

    <style name="AppBarIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:background">@color/pure_trans</item>
    </style>

    <style name="AppBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">3dp</item>
    </style>
</resources>