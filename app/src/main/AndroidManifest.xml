<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.skott.softsquared.outsourcing_simulation">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OutSourcingSimulating">
        <activity android:name=".src.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".src.main.signup.SignupActivity"/>
        <activity android:name=".src.main.FindIdForEmailActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="find_id_for_email"/>
            </intent-filter>
        </activity>
        <activity android:name=".src.main.signin.SignInActivity"/>
        <activity android:name=".src.main.home.HomeActivity"/>
        <activity android:name=".src.main.create_profile.CreateProfileActivity"/>
    </application>

</manifest>